<nav>
  <ul class="nav_menu">
    <li><a href="/#">Tilmeld</a></li>
    <li><a href="/#">Nyhedsbrev</a></li>
    <li><a href="/#">Arrangementer</a></li>
  </ul>
  <div class="hamburger">
    <span class="bar"></span>
    <span class="bar"></span>
    <span class="bar"></span>
  </div>
</nav>

<style>

  li {
    list-style: none;
  }

  a {
    text-decoration: none;
  }

  a:hover {
    color: var(--hover-color);  
  }

  nav {
    min-height: 70px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: end;
    padding: 0 24px;
  }

  .nav-menu {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: end;
    gap: 1.5em;
    margin-top: 10%;
  }

  .nav_menu {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: end;
    gap: 1.5em;
    margin-top: 2em;
  }
  
  .hamburger {
    display: none;
    cursor: pointer;
    margin-top: 2em;
  }

  .bar {
    display: block;
    width: 25px;
    height: 1px;
    margin: 5px auto;
    transition: all 0.4s ease-in-out;
    background-color: black;
  }
  
  @media (max-width: 700px) {
    .nav_menu {
      flex-direction: column;
      position: absolute;
      overflow: hidden;
      right: -200%;
      top: -1em;
      justify-content: center;
      padding: 0;
      width: 100%;
      height: 110vh;
      text-align: center;
      transition: 0.3s;
      z-index: 2;
      align-items: center;
      margin-top: 0;
      gap: 3em;
    }

    li {
      padding: 0.3em;
    }

    .hamburger {
      display: block;
      z-index: 3;
    }

    .hamburger.active .bar:nth-child(1) {
      translate: 0 7px;
      rotate: 45deg;
    }

    .hamburger.active .bar:nth-child(2) {
      opacity: 0;
    }

    .hamburger.active .bar:nth-child(3) {
      translate: 0 -5px;
      rotate: -45deg;
    }

    .nav_menu.active {
      right: 0;
    }
  }

  
</style>

<script src="../js/script.js"></script>

